{
    "name": "tataru-helper-node",
    "version": "2.0.27",
    "description": "tataru-helper-node",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "repository": "https://github.com/winw1010/tataru-helper-node-ver.2.0.0",
    "keywords": [
        "Tataru Helper"
    ],
    "author": "winw1010",
    "license": "MIT",
    "devDependencies": {
        "electron": "^19.0.8",
        "electron-builder": "^23.1.0",
        "eslint": "^8.19.0"
    },
    "dependencies": {
        "@hobbica98/google-translate-api": "^1.1.1",
        "axios": "^0.27.2",
        "crypto-js": "^4.1.1",
        "download-git-repo": "^3.0.2",
        "google-tts-api": "^2.0.2",
        "json-fixer": "^1.6.13",
        "screenshot-desktop": "^1.12.7",
        "sharp": "^0.30.6",
        "tesseract.js": "^2.1.5"
    },
    "build": {
        "appId": "com.app.tataru.helper.node",
        "productName": "Tataru Helper Node",
        "directories": {
            "output": "build"
        },
        "extraFiles": [
            "json",
            "!json/log",
            "!json/setting",
            "!json/text_temp",
            "trained_data",
            "!trained_data/screenshot.png",
            "!trained_data/crop.png",
            "!trained_data/result.png",
            "!_Tataru_Helper"
        ],
        "win": {
            "icon": "./img/icon/tataru.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": false,
            "packElevateHelper": false,
            "createStartMenuShortcut": true,
            "createDesktopShortcut": "always",
            "allowToChangeInstallationDirectory": true
        }
    }
}
